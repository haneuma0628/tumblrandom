<!DOCTYPE html>
<html>
    <head>
        <title>Tumblrandom</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag    'entrance',    media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <header class="units-row">
            <div class="unit-35">
            </div>

            <div class="unit-30 logo-unit">
                <h1 id="logo"><span>tumb</span>lrandom</h1>
            </div>

            <div class="unit-35">
            </div>
        </header>

        <div id="contents-area">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>

            <%= yield %>
        </div>

        <footer>
            (c) 2014-2015 @hnmx4
        </footer>
    </body>
</html>
